                                                actor.system.stage "2"
                                                )}}data-value="{{actor.system.basic.stats.brains}}" {{/if}} {{#if (eq
                                                actor.system.stage "1"
                                                )}}data-value="{{actor.system.fledgling.stats.brains}}" {{/if}} {{#if
                                                (eq actor.system.stage "3"
                                                )}}data-value="{{actor.system.super.stats.brains}}" {{/if}} {{#if (eq
                                                actor.system.stage "4"
                                                )}}data-value="{{actor.system.ultra.stats.brains}}" {{/if}} {{#if (eq
                                                actor.system.stage "5"
                                                )}}data-value="{{actor.system.giga.stats.brains}}" {{/if}}>
                                                <i class="fas fa-dice"></i>
                                            </a>
                                        </div>
                                        {{#if (eq actor.system.stage "2")}}
                                        {{actor.system.basic.stats.brains}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "1")}}
                                        {{actor.system.fledgling.stats.brains}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "3")}}
                                        {{actor.system.super.stats.brains}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "4")}}
                                        {{actor.system.ultra.stats.brains}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "5")}}
                                        {{actor.system.giga.stats.brains}}
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="item-box-border animon-hit-points">
                                    <h4 class="title">{{localize "animon.animon.sigUses"}}</h4>
                                    {{#unless (eq actor.system.stage "1")}}
