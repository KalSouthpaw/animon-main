{{!-- Sheet for displaying Animon --}}

<form class="{{cssClass}}" autocomplete="off">
    <nav class="sheet-tabs tabs title-box-border" data-group="primary">
        <a class="item" data-tab="animon">{{localize "animon.tabs.animon"}}</a>
        <a class="item" data-tab="stages">{{localize "animon.tabs.stages"}}</a>
        <a class="item" data-tab="advancement">{{localize "animon.tabs.scoreImprovement"}}</a>
    </nav>
    <section class="sheet-body">
        {{!-- Hero Tab Content --}}
        <div class="tab animon" data-group="primary" data-tab="animon">
            <div class="stage-box-border">
                <div class="item-box-border animon-current-stage">
                    <h3>{{localize "animon.animon.currentStage"}}:</h3>
                    <select class="stage-change" name="system.stage">
                        {{#select actor.system.stage}}
                        <option value="1">{{localize "animon.animon.stages.fledgling"}}</option>
                        <option value="2">{{localize "animon.animon.stages.basic"}}</option>
                        <option value="3">{{localize "animon.animon.stages.super"}}</option>
                        <option value="4">{{localize "animon.animon.stages.ultra"}}</option>
                        <option value="5">{{localize "animon.animon.stages.giga"}}</option>
                        {{/select}}
                    </select>
                </div>
                <div class="animon-info">
                    <div>
                        <div class="item-box-border animon-stage-name">
                            <h3>{{localize "animon.animon.name"}}:</h3>
                            {{#if (eq actor.system.stage "2")}}
                            <p>{{actor.system.basic.name}}</p>
                            {{/if}}
                            {{#if (eq actor.system.stage "1")}}
                            <p>{{actor.system.fledgling.name}}</p>
                            {{/if}}
                            {{#if (eq actor.system.stage "3")}}
                            <p>{{actor.system.super.name}}</p>
                            {{/if}}
                            {{#if (eq actor.system.stage "4")}}
                            <p>{{actor.system.ultra.name}}</p>
                            {{/if}}
                            {{#if (eq actor.system.stage "5")}}
                            <p>{{actor.system.giga.name}}</p>
                            {{/if}}
                        </div>
                        <div class="animon-info-stats">
                            <div>
                                <div class="item-box-border animon-stats text-centered">
                                    <h3 class="title">{{localize "animon.animon.stats"}}</h3>
                                    <div class="animon-heart">
                                        <div class="animon-heart-title">
                                            <h4>{{localize "animon.animon.heart"}}</h4>
                                            <a title='{{localize "animon.button.rollHeart"}}' class="roll-stat"
                                                data-stat="{{localize 'animon.animon.heart'}}" {{#if (eq
                                                actor.system.stage "2"
                                                )}}data-value="{{actor.system.basic.stats.heart}}" {{/if}} {{#if (eq
                                                actor.system.stage "1"
                                                )}}data-value="{{actor.system.fledgling.stats.heart}}" {{/if}} {{#if (eq
                                                actor.system.stage "3"
                                                )}}data-value="{{actor.system.super.stats.heart}}" {{/if}} {{#if (eq
                                                actor.system.stage "4"
                                                )}}data-value="{{actor.system.ultra.stats.heart}}" {{/if}} {{#if (eq
                                                actor.system.stage "5" )}}data-value="{{actor.system.giga.stats.heart}}"
                                                {{/if}}>
                                                <i class="fas fa-dice"></i>
                                            </a>
                                        </div>

                                        {{#if (eq actor.system.stage "2")}}
                                        {{actor.system.basic.stats.heart}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "1")}}
                                        {{actor.system.fledgling.stats.heart}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "3")}}
                                        {{actor.system.super.stats.heart}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "4")}}
                                        {{actor.system.ultra.stats.heart}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "5")}}
                                        {{actor.system.giga.stats.heart}}
                                        {{/if}}
                                    </div>

                                    <div class="animon-power">
                                        <div class="animon-power-title">
                                            <h4>{{localize "animon.animon.power"}}</h4>
                                            <a title='{{localize "animon.button.rollPower"}}' class="roll-stat"
                                                data-stat='{{localize "animon.animon.power"}}' {{#if (eq
                                                actor.system.stage "2"
                                                )}}data-value="{{actor.system.basic.stats.power}}" {{/if}} {{#if (eq
                                                actor.system.stage "1"
                                                )}}data-value="{{actor.system.fledgling.stats.power}}" {{/if}} {{#if (eq
                                                actor.system.stage "3"
                                                )}}data-value="{{actor.system.super.stats.power}}" {{/if}} {{#if (eq
                                                actor.system.stage "4"
                                                )}}data-value="{{actor.system.ultra.stats.power}}" {{/if}} {{#if (eq
                                                actor.system.stage "5" )}}data-value="{{actor.system.giga.stats.power}}"
                                                {{/if}}>
                                                <i class="fas fa-dice"></i>
                                            </a>
                                        </div>
                                        {{#if (eq actor.system.stage "2")}}
                                        {{actor.system.basic.stats.power}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "1")}}
                                        {{actor.system.fledgling.stats.power}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "3")}}
                                        {{actor.system.super.stats.power}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "4")}}
                                        {{actor.system.ultra.stats.power}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "5")}}
                                        {{actor.system.giga.stats.power}}
                                        {{/if}}
                                    </div>

                                    <div class="animon-agility">
                                        <div class="animon-agility-title">
                                            <h4>{{localize "animon.animon.agility"}}</h4>
                                            <a title='{{localize "animon.button.rollAgility"}}' class="roll-stat"
                                                data-stat='{{localize "animon.animon.agility"}}' {{#if (eq
                                                actor.system.stage "2" )}}
