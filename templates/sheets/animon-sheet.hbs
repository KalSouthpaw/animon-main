                                        value="{{actor.system.sigUses.value}}">
                                    <br>
                                    {{#if (eq actor.system.stage "2")}}
                                    {{actor.system.basic.sigUses.max}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "3")}}
                                    {{actor.system.super.sigUses.max}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "4")}}
                                    {{actor.system.ultra.sigUses.max}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "5")}}
                                    {{actor.system.giga.sigUses.max}}
                                    {{/if}}
                                    {{else}}
                                    None
                                    {{/unless}}
                                </div>

                            </div>

                            <div>
                                <div class="item-box-border animon-hit-points">
                                    <h4 class="title">{{localize "animon.animon.hp"}}</h4>
                                    <input type="number" name="system.wounds.value"
                                        value="{{actor.system.wounds.value}}">
                                    <br>{{actor.system.wounds.max}}
                                </div>

                                <div class="item-box-border animon-damage">
                                    <h4 class="title">{{localize "animon.animon.damage"}}</h4>
                                    {{#if (eq actor.system.stage "2")}}
                                    {{actor.system.basic.damage}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "1")}}
                                    {{actor.system.fledgling.damage}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "3")}}
                                    {{actor.system.super.damage}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "4")}}
                                    {{actor.system.ultra.damage}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "5")}}
                                    {{actor.system.giga.damage}}
                                    {{/if}}
                                </div>

                                <div class="item-box-border animon-dodge">
                                    <div class="animon-dodge-title title">
                                        <h4>{{localize "animon.animon.dodge"}}</h4>
                                        <a title='{{localize "animon.button.rollDodge"}}' class="roll-stat"
                                            data-stat='{{localize "animon.animon.dodge"}}'
                                            data-value="{{actor.system.basic.dodge}}">
                                            <i class="fas fa-dice"></i>
                                        </a>
                                    </div>
                                    {{#if (eq actor.system.stage "2")}}
                                    {{actor.system.basic.dodge}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "1")}}
                                    {{actor.system.fledgling.dodge}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "3")}}
                                    {{actor.system.super.dodge}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "4")}}
                                    {{actor.system.ultra.dodge}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "5")}}
                                    {{actor.system.giga.dodge}}
                                    {{/if}}
                                </div>

                                <div class="item-box-border animon-initiative">
                                    <div class="animon-initiative-title title">
                                        <h4>{{localize "animon.animon.initiative"}}</h4>
                                        <a title='{{localize "animon.button.rollInitiative"}}' class="roll-stat"
                                            data-stat='{{localize "animon.animon.initiative"}}'
                                            data-value="{{actor.system.basic.initiative}}">
                                            <i class="fas fa-dice"></i>
                                        </a>
                                    </div>
                                    {{#if (eq actor.system.stage "2")}}
                                    {{actor.system.basic.initiative}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "1")}}
                                    {{actor.system.fledgling.initiative}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "3")}}
                                    {{actor.system.super.initiative}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "4")}}
                                    {{actor.system.ultra.initiative}}
                                    {{/if}}
                                    {{#if (eq actor.system.stage "5")}}
                                    {{actor.system.giga.initiative}}
                                    {{/if}}
                                </div>
                            </div>

                        </div>
                    </div>
                    <div>
                        <div class="item-box-border nature">
                            <h3>{{localize "animon.animon.nature"}}:</h3>
                            <p>{{actor.system.nature}}</p>
                        </div>
                        <div class="class-element">
                            <div class="item-box-border classification">
                                <h3>{{localize "animon.animon.classification"}}:</h3>
                                {{#if (eq actor.system.stage "2")}}
                                <p>{{actor.system.basic.classification}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "1")}}
                                <p>{{actor.system.fledgling.classification}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "3")}}
                                <p>{{actor.system.super.classification}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "4")}}
                                <p>{{actor.system.ultra.classification}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "5")}}
                                <p>{{actor.system.giga.classification}}</p>
                                {{/if}}
                            </div>
                            <div class="item-box-border element">
                                <h3>{{localize "animon.animon.element"}}:</h3>
                                {{#if (eq actor.system.stage "2")}}
                                <p>{{actor.system.basic.element}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "1")}}
                                <p>{{actor.system.fledgling.element}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "3")}}
                                <p>{{actor.system.super.element}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "4")}}
                                <p>{{actor.system.ultra.element}}</p>
                                {{/if}}
                                {{#if (eq actor.system.stage "5")}}
                                <p>{{actor.system.giga.element}}</p>
                                {{/if}}
                            </div>
                        </div>
                        {{#unless (eq actor.system.stage "1")}}
                        <div class="item-box-border">
                            <h4 class="signature-attack-main">{{localize "animon.animon.signatureAttack"}}</h4>
                            {{> "systems/animon/templates/partials/signature-attack-display.hbs" stage="2"
                            currentStage=actor.system.stage}}
                            {{> "systems/animon/templates/partials/signature-attack-display.hbs" stage="3"
                            currentStage=actor.system.stage}}
                            {{> "systems/animon/templates/partials/signature-attack-display.hbs" stage="4"
                            currentStage=actor.system.stage}}
                            {{> "systems/animon/templates/partials/signature-attack-display.hbs" stage="5"
