                                                actor.system.stage "1" )}}
                                                data-value="{{actor.system.fledgling.stats.agility}}" {{/if}} {{#if (eq
                                                actor.system.stage "3" )}}
                                                data-value="{{actor.system.super.stats.agility}}" {{/if}} {{#if (eq
                                                actor.system.stage "4" )}}
                                                data-value="{{actor.system.ultra.stats.agility}}" {{/if}} {{#if (eq
                                                actor.system.stage "5" )}}
                                                data-value="{{actor.system.giga.stats.agility}}" {{/if}}>
                                                <i class="fas fa-dice"></i>
                                            </a>
                                        </div>
                                        {{#if (eq actor.system.stage "2")}}
                                        {{actor.system.basic.stats.agility}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "1")}}
                                        {{actor.system.fledgling.stats.agility}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "3")}}
                                        {{actor.system.super.stats.agility}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "4")}}
                                        {{actor.system.ultra.stats.agility}}
                                        {{/if}}
                                        {{#if (eq actor.system.stage "5")}}
                                        {{actor.system.giga.stats.agility}}
                                        {{/if}}
                                    </div>

                                    <div class="animon-brains">
                                        <div class="animon-brains-title">
                                            <h4>{{localize "animon.animon.brains"}}</h4>
                                            <a title='{{localize "animon.button.rollBrains"}}' class="roll-stat"
